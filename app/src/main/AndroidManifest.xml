<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jimmy.gg.flashingnumbers">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".main.MainActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".menu.FlashingNumbers"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".LevelManager.Levels"
            android:launchMode="singleTop"
            android:allowBackup="true"
            android:theme="@style/NumbersStyle"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".settings.NumbersSettings"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".LevelManager.Numbers"
            android:noHistory="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".LevelManager.NumbersRemember"
            android:screenOrientation="portrait"
            android:noHistory="true" />
        <activity android:name=".quicklevel.QuickLevel"
            android:screenOrientation="portrait"/>
        <activity android:name=".menu.HighScore"
            android:screenOrientation="portrait"/>
    </application>

</manifest>