<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jimmy.gg.flashingnumbers"
    android:installLocation="preferExternal">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".helpers.IternalMemory">
        <activity
            android:name=".main.MainActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:theme="@style/NumbersStyle"
            android:name=".menu.FlashingNumbers"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LevelManager.Levels"
            android:allowBackup="true"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/NumbersStyle" />
        <activity
            android:theme="@style/NumbersStyle"
            android:name=".settings.NumbersSettings"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:theme="@style/NumbersStyle"
            android:name=".LevelManager.Numbers"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:theme="@style/NumbersStyle"
            android:name=".LevelManager.NumbersRemember"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:theme="@style/NumbersStyle"
            android:name=".quicklevel.QuickLevel"
            android:screenOrientation="portrait" />

        <activity
            android:name=".highscore.TabbedHighScore"
            android:label="@string/title_activity_tabbed_high_score"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"/>
    </application>

</manifest>