<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main_activity_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="jimmy.gg.flashingnumbers.main.MemoryMarathon"
    tools:showIn="@layout/app_bar_main_activity_test"
    android:theme="@style/MainStyle">

    <Button
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="@string/main_numbers"
        android:textSize="24sp"
        android:height="70sp"
        android:onClick="numbersGameStart"
        android:id="@+id/button3"
        android:theme="@style/MaterialButtonMainNumbers"
        android:drawableLeft="@drawable/main_numbers_icon"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="@string/main_words"
        android:textSize="24sp"
        android:height="70sp"
        android:onClick="wordsGameStart"
        android:id="@+id/button4"
        android:theme="@style/MaterialButtonMainWords"
        android:drawableLeft="@drawable/words_icon"
        android:layout_below="@+id/button3"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:layout_marginTop="25dp" />

</RelativeLayout>
