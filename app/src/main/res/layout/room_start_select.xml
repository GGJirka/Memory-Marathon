<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select amount of rounds: "
        android:textColor="@color/black"
        android:id="@+id/amount_rounds_text"/>
    <EditText
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:maxLength="1"
        android:id="@+id/amount_rounds_edit"/>
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select amount of numbers: "
            android:textColor="@color/black"
            android:id="@+id/amount_numbers_text"/>
        <EditText
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:maxLength="3"
            android:id="@+id/amount_numbers_edit" />
    </LinearLayout>
</RelativeLayout>