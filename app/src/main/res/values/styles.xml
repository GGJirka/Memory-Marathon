<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BlueTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/material_blue_title_top</item>
        <item name="colorPrimary">@color/material_blue_title_bot</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MaterialDesign.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PreferenceCategoryStyle">
        <item name="android:listDivider">@color/black</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="NumbersStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/numbers_title_bot</item>
        <item name="colorPrimaryDark">@color/numbers_title_top</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="WordsStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/words_title_bot</item>
        <item name="colorPrimaryDark">@color/words_title_top</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/white</item>
    </style>

    <style name="MaterialButtonWords" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/words_button_click</item>
        <item name="colorButtonNormal">@color/words_button</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MaterialButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/numbers_button_clicked_color</item>
        <item name="colorButtonNormal">@color/numbers_button_color</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@android:color/black</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
